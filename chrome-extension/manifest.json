{
  "manifest_version": 3,
  "name": "Arabic Lemmatizer",
  "version": "1.0",
  "description": "Highlight unknown Arabic words and show their lemmas",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:8000/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
