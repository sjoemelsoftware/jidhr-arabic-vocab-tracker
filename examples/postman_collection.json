{
  "info": {
    "_postman_id": "example-collection",
    "name": "Arabic Lemmatizer API",
    "description": "Collection of example requests for the Arabic Lemmatizer API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Lemmatize Text",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"text\": \"مرحبا بالعالم\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/lemmatize",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["lemmatize"]
        },
        "description": "Lemmatizes Arabic text and returns the lemmatized version along with word-lemma mappings"
      }
    },
    {
      "name": "Check Vocabulary",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"text\": \"مرحبا بالعالم\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/check",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["check"]
        },
        "description": "Checks which words in the text are known/unknown in the vocabulary"
      }
    },
    {
      "name": "Update Known Words",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"text\": \"مرحبا بالعالم\",\n    \"unknown_words\": [\"مرحبا\"]\n}"
        },
        "url": {
          "raw": "http://localhost:8000/update-known",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["update-known"]
        },
        "description": "Updates the known/unknown status of words in the vocabulary"
      }
    },
    {
      "name": "Get All Vocabulary",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8000/vocab",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["vocab"]
        },
        "description": "Retrieves all vocabulary entries"
      }
    },
    {
      "name": "Get Known Vocabulary",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8000/vocab/known",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["vocab", "known"]
        },
        "description": "Retrieves only known vocabulary entries"
      }
    },
    {
      "name": "Get Unknown Vocabulary",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8000/vocab/unknown",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["vocab", "unknown"]
        },
        "description": "Retrieves only unknown vocabulary entries"
      }
    }
  ]
}
